@model PatientCreateModel
@{
    Layout = null;
}
<h2 stye="margin:12px auto">Регистрация пациента</h2>
<form class="form-container" data-ajax="true" data-ajax-method="post" data-ajax-success="onPatientCreateSuccess" data-ajax-failure="onPatientCreateFailed" data-ajax-url="/home/createpatient">
    <div asp-validation-summary="ModelOnly" class="text-danger row"></div>
    <div id="errors" class="text-danger row d-none"></div>
    <div id="success" class="text-success row d-none"><span>Пациент успешно зарегистрирован</span></div>
    <div class="mb-3 stand-alone">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="stand-alone">
        <div class="mb-3 col-left">
            <label asp-for="Gender" class="form-label"></label>
            <select asp-for="Gender" class="form-control">
                <option value="Male" selected>Мужской</option>
                <option value="Female">Женский</option>
            </select>
        </div>
        <div class="mb-3 col-right" style="align-self:flex-end">
            <label asp-for="Birthday" class="form-label"></label>
            <input asp-for="Birthday" type="date" class="form-control" />
            <span asp-validation-for="Birthday" class="text-danger"></span>
        </div>
    </div>
    <div class="mb-3 stand-alone">
        <input id="submitBtn" type="submit" value="Зарегистрировать" class="btn btn-primary btn-block stand-alone" />
    </div>
</form>