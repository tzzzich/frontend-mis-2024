@model MyWebApp.Models.LoginCredentialsModel

@{
    ViewData["Title"] = "Вход";
}

<main class="card shadow">

    <h2>Вход</h2>
    <form method="post" data-ajax="true" data-ajax-method="post" data-ajax-success="onLoginSuccess" data-ajax-failure="onLoginFailed" data-ajax-url="/login/login">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div id="errors" class="text-danger row hidden"></div>
        <div id="success" class="text-success row hidden"><span>Данные сохранены успешно</span></div>
        <div class="flex stand-alone">
            <label asp-for="Email" class="form-label">Email</label>
            <input asp-for="Email" class="" placeholder="name@example.com">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="flex stand-alone">
            <label asp-for="Password" class="form-label">Пароль</label>
            <input asp-for="Password" type="password" class="">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <br>
        <div class="form-button"><input type="submit" value="Войти" class="button stand-alone" style="margin-bottom:0.5em"/></div>
        <div class="form-button"><a class="button grey stand-alone" href="/registration/" role="button">Регистрация</a></div>
    </form>
</main>

@section Scripts {
    <script src="~/js/login.js" asp-append-version="true"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
